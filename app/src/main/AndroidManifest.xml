        android:supportsRtl="true"
        android:theme="@style/Theme.NavdrawerBottomnva"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:name=".openAccount.WebviewActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".advisory.tabs.derivative.extendView.DerivativeExtendViewActivity"
