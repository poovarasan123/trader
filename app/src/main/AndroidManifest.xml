<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.propositive.traderwaale">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.propositive.traderwaale.UserSettings"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavdrawerBottomnva"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:name="com.propositive.traderwaale.login.LoginActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.openAccount.WebviewActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name="com.propositive.traderwaale.advisory.tabs.derivative.extendView.DerivativeExtendViewActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.termOfuse.TermofUseActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.privacypolicy.PrivacyPolicyActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.openAccount.OpenAccountActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name="com.propositive.traderwaale.bookmark.BookmarkActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.advisory.tabs.equity.extendView.EquityExtendViewActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.home.NewsExtendActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.MainActivity"
            android:exported="true" />

        <activity
            android:name="com.propositive.traderwaale.register.RegisterActivity"
            android:exported="true" />
        

        <activity
            android:name="com.propositive.traderwaale.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>