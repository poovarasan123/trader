                    <!--                        android:layout_marginStart="15dp"-->
                    <!--                        android:src="@drawable/ic_bookmark"/>-->


                    <!--                </LinearLayout>-->

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>